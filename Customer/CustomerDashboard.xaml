<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="Saha.Customer.CustomerDashboard"
             BackgroundColor="Black">
        <!-- 
        Ensure x:Class="Saha.LoginPage" correctly matches your namespace and class name.
        If LoginPage.xaml is in a "Pages" subfolder and your root namespace is "Saha",
        then it should be x:Class="Saha.Pages.LoginPage".
        The namespace in LoginPage.xaml.cs must also match (e.g., namespace Saha.Pages).
    -->
        <ContentPage.Resources>
                <ResourceDictionary>

                        <!-- Gradient Background from MainPage.xaml -->
                        <LinearGradientBrush x:Key="PageGradientBackground"
                                             StartPoint="0,0"
                                             EndPoint="1,1">
                                <GradientStop Color="#00807E"
                                              Offset="0.1"/>
                                <GradientStop Color="#1A596E"
                                              Offset="0.5"/>
                                <GradientStop Color="#342758"
                                              Offset="1.0"/>
                        </LinearGradientBrush>

                        <!-- Headline Style - Colors adapted from MainPage -->
                        <Style x:Key="Headline"
                               TargetType="Label">
                                <Setter Property="FontSize"
                                        Value="36"/>
                                <Setter Property="FontAttributes"
                                        Value="Bold"/>
                                <Setter Property="HorizontalOptions"
                                        Value="Center"/>
                                <Setter Property="TextColor"
                                        Value="White"/>
                                <!-- MainPage Headline TextColor -->
                                <Setter Property="Margin"
                                        Value="0,0,0,20"/>
                        </Style>

                        <!-- Input Entry Border Style - Colors adapted for dark theme -->
                        <Style x:Key="InputEntryBorderStyle"
                               TargetType="Border">
                                <Setter Property="StrokeThickness"
                                        Value="1"/>
                                <Setter Property="Stroke"
                                        Value="#88FFFFFF"/>
                                <!-- Semi-transparent white border -->
                                <Setter Property="BackgroundColor"
                                        Value="#33FFFFFF"/>
                                <!-- Semi-transparent white background for field -->
                                <Setter Property="Padding"
                                        Value="12,8"/>
                                <Setter Property="Margin"
                                        Value="10,0"/>
                                <Setter Property="StrokeShape">
                                        <RoundRectangle CornerRadius="28"/>
                                </Setter>
                                <Setter Property="Shadow">
                                        <!-- Keeping original shadow, can be tweaked if needed -->
                                        <Setter.Value>
                                                <Shadow Brush="Black"
                                                        Opacity="0.2"
                                                        Offset="2,2"
                                                        Radius="5"/>
                                        </Setter.Value>
                                </Setter>
                        </Style>

                        <!-- Input Entry Style (for the Entry control itself) - Colors adapted for dark theme -->
                        <Style x:Key="InputEntryStyle"
                               TargetType="Entry">
                                <Setter Property="FontSize"
                                        Value="16"/>
                                <Setter Property="PlaceholderColor"
                                        Value="#A0FFFFFF"/>
                                <!-- Lighter placeholder for dark background -->
                                <Setter Property="TextColor"
                                        Value="White"/>
                                <!-- Input text color -->
                                <Setter Property="VerticalOptions"
                                        Value="Center"/>
                                <Setter Property="BackgroundColor"
                                        Value="Transparent"/>
                                <!-- Entry itself is transparent -->
                                <Setter Property="Margin"
                                        Value="0"/>
                                <Setter Property="HeightRequest"
                                        Value="30"/>
                        </Style>

                        <!-- Primary Action Button Style - Adapted from MainPage's blue "Log In" button -->
                        <Style x:Key="PrimaryActionButtonStyle"
                               TargetType="Button">
                                <Setter Property="FontSize"
                                        Value="18"/>
                                <Setter Property="FontAttributes"
                                        Value="Bold"/>
                                <Setter Property="TextColor"
                                        Value="White"/>
                                <Setter Property="Padding"
                                        Value="15"/>
                                <Setter Property="Margin"
                                        Value="12,20,12,12"/>
                                <Setter Property="HeightRequest"
                                        Value="55"/>
                                <Setter Property="CornerRadius"
                                        Value="28"/>
                                <Setter Property="Shadow">
                                        <!-- Shadow from MainPage's CustomButtonStyle (can be adjusted) -->
                                        <Setter.Value>
                                                <Shadow Brush="Black"
                                                        Opacity="0.5"
                                                        Offset="4,4"/>
                                        </Setter.Value>
                                </Setter>
                                <Setter Property="BackgroundColor"
                                        Value="#0056b3"/>
                                <!-- Blue from MainPage's Log In button -->
                                <!-- <Setter Property="BorderColor" Value="White"/> Optional, if you want a white border like MainPage buttons -->
                                <!-- <Setter Property="BorderWidth" Value="2"/> -->
                                <Setter Property="VisualStateManager.VisualStateGroups">
                                        <VisualStateGroupList>
                                                <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal"/>
                                                        <VisualState x:Name="Pressed">
                                                                <VisualState.Setters>
                                                                        <Setter Property="BackgroundColor"
                                                                                Value="#004085"/>
                                                                        <!-- Darker blue for pressed -->
                                                                        <Setter Property="Scale"
                                                                                Value="0.98"/>
                                                                </VisualState.Setters>
                                                        </VisualState>
                                                        <VisualState x:Name="Disabled">
                                                                <VisualState.Setters>
                                                                        <Setter Property="Background"
                                                                                Value="#555555"/>
                                                                        <!-- Dark gray for disabled -->
                                                                        <Setter Property="Opacity"
                                                                                Value="0.7"/>
                                                                        <Setter Property="TextColor"
                                                                                Value="#AAAAAA"/>
                                                                        <!-- Light gray text for disabled -->
                                                                </VisualState.Setters>
                                                        </VisualState>
                                                </VisualStateGroup>
                                        </VisualStateGroupList>
                                </Setter>
                        </Style>

                        <!-- Link Text Style - Color adapted for dark theme -->
                        <Style x:Key="LinkTextStyle"
                               TargetType="Label">
                                <Setter Property="TextColor"
                                        Value="#ADD8E6"/>
                                <!-- Light blue, common for links on dark -->
                                <Setter Property="HorizontalOptions"
                                        Value="Center"/>
                                <Setter Property="FontSize"
                                        Value="14"/>
                                <Setter Property="TextDecorations"
                                        Value="Underline"/>
                        </Style>

                        <!-- Icon Style for Path - Color adapted for dark theme -->
                        <Style x:Key="IconPathStyle"
                               TargetType="Path">
                                <Setter Property="Fill"
                                        Value="White"/>
                                <!-- White icons for visibility -->
                                <Setter Property="VerticalOptions"
                                        Value="Center"/>
                                <Setter Property="HorizontalOptions"
                                        Value="Center"/>
                                <Setter Property="HeightRequest"
                                        Value="20"/>
                                <Setter Property="WidthRequest"
                                        Value="20"/>
                        </Style>

                </ResourceDictionary>
        </ContentPage.Resources>

        <!-- Apply the Gradient Background from MainPage -->
        <ContentPage.Background>
                <StaticResource Key="PageGradientBackground"/>
        </ContentPage.Background>


        <Grid ColumnDefinitions="Auto,*"
              RowDefinitions="*">

                <!-- Sidebar Navigation -->
                <StackLayout Grid.Column="0"
                             BackgroundColor="#222"
                             VerticalOptions="FillAndExpand"
                             WidthRequest="180">
                        <Border Stroke="#88FFFFFF"
                                StrokeThickness="1"
                                Padding="5">
                                <Button Text="Dashboard"
                                        TextColor="White"
                                        BackgroundColor="Gray"
                                        Clicked="OnDashboardClicked"/>
                        </Border>

                        <Border Stroke="#88FFFFFF"
                                StrokeThickness="1"
                                Padding="5">
                                <Button Text="Programs"
                                        TextColor="White"
                                        BackgroundColor="Transparent"
                                        Clicked="OnUsersClicked"/>
                        </Border>

                        <Border Stroke="#88FFFFFF"
                                StrokeThickness="1"
                                Padding="5">
                                <Button Text="Logout"
                                        TextColor="Red"
                                        BackgroundColor="Transparent"
                                        Clicked="OnLogoutClicked"/>
                        </Border>
                </StackLayout>

                <!-- Main Content Area -->
                <ScrollView Grid.Column="1"
                            VerticalOptions="FillAndExpand"
                            Padding="10">
                        <CollectionView ItemsSource="{Binding Programs}"
                                        Margin="0,0,0,30"
                                        ItemsLayout="VerticalGrid, 2">
                                <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                                <Frame CornerRadius="10"
                                                       Padding="15"
                                                       Margin="10"
                                                       BackgroundColor="White"
                                                       HasShadow="True">
                                                        <Frame.GestureRecognizers>
                                                                <PointerGestureRecognizer PointerEntered="OnHomePointerEntered"
                                                                                          PointerExited="OnHomePointerExited"/>
                                                                <TapGestureRecognizer
                                                                        Tapped="OnProgramTapped"
                                                                        CommandParameter="{Binding}"/>
                                                        </Frame.GestureRecognizers>

                                                        <VerticalStackLayout>
                                                                <Label Text="{Binding Name}"
                                                                       FontAttributes="Bold"
                                                                       FontSize="20"
                                                                       TextColor="#FF514805"/>
                                                                <Label Text="{Binding Description}"
                                                                       FontSize="14"
                                                                       TextColor="#FFBAA72E"/>
                                                                <Label Text="Price:"
                                                                       FontAttributes="Bold"
                                                                       FontSize="14"
                                                                       TextColor="Black"/>
                                                                <Label Text="{Binding Price, StringFormat='₱{0:N0}'}"
                                                                       FontSize="13"
                                                                       TextColor="Black"/>
                                                        </VerticalStackLayout>
                                                </Frame>
                                        </DataTemplate>
                                </CollectionView.ItemTemplate>
                        </CollectionView>
                </ScrollView>

                <!-- Popup Overlay -->
                <Grid x:Name="PopupOverlay"
                      Grid.ColumnSpan="2"
                      BackgroundColor="#80000000"
                      IsVisible="False"
                      Padding="20"
                      ZIndex="999">
                        <Frame x:Name="PopupModal"
                               BackgroundColor="White"
                               CornerRadius="20"
                               Padding="20"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               WidthRequest="400"
                               HasShadow="True">

                                <VerticalStackLayout Spacing="10">
                                        <Label x:Name="PopupTitle"
                                               Text="Program Title"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>
                                        <Label x:Name="PopupMessage"
                                               Text="Program details will go here."
                                               FontSize="14"
                                               TextColor="Black"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center"/>
                                        <HorizontalStackLayout HorizontalOptions="Center"
                                                               Spacing="15">
                                                <Button Text="Close"
                                                        BackgroundColor="#B0BEC5"
                                                        TextColor="Black"
                                                        Clicked="ClosePopup"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                                <Button Text="Avail"
                                                        BackgroundColor="#00BFA5"
                                                        TextColor="White"
                                                        Clicked="OnAvailClicked"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                        </HorizontalStackLayout>
                                </VerticalStackLayout>

                        </Frame>
                </Grid>

                <Grid x:Name="CalendarPopupOverlay"
                      Grid.ColumnSpan="2"
                      BackgroundColor="#80000000"
                      IsVisible="False"
                      Padding="20"
                      ZIndex="999">

                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="20"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               WidthRequest="400"
                               HasShadow="True">

                                <VerticalStackLayout Spacing="15">
                                        <Label Text="Select Schedule Date"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>

                                        <DatePicker x:Name="SelectedDatePicker"
                                                    MinimumDate="{x:Static sys:DateTime.Now}"
                                                    WidthRequest="250"
                                                    BackgroundColor="Gray"
                                                    TextColor="Black"
                                                    HorizontalOptions="Center"/>

                                        <HorizontalStackLayout HorizontalOptions="Center"
                                                               Spacing="15">
                                                <Button Text="Cancel"
                                                        BackgroundColor="#B0BEC5"
                                                        TextColor="Black"
                                                        Clicked="CloseCalendarPopup"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                                <Button Text="Confirm"
                                                        BackgroundColor="#00BFA5"
                                                        TextColor="White"
                                                        Clicked="OnDateConfirmed"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                        </HorizontalStackLayout>
                                </VerticalStackLayout>
                        </Frame>
                </Grid>

                <Grid x:Name="GcashTransactionPopupOverlay"
                      Grid.ColumnSpan="2"
                      BackgroundColor="#80000000"
                      IsVisible="False"
                      Padding="20"
                      ZIndex="1000">

                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="20"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               WidthRequest="400"
                               HasShadow="True">

                                <VerticalStackLayout Spacing="15">

                                        <!-- GCash Number Display -->
                                        <Label Text="Send payment to: 09123434786"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>

                                        <!-- Transaction Number Entry -->
                                        <Entry x:Name="TransactionNumberEntry"
                                               Placeholder="Enter your GCash transaction number"
                                               MaxLength="20"
                                               WidthRequest="300"
                                               BackgroundColor="#EEEEEE"
                                               TextColor="Black"
                                               HorizontalOptions="Center"/>

                                        <!-- Buttons -->
                                        <HorizontalStackLayout HorizontalOptions="Center"
                                                               Spacing="15">
                                                <Button Text="Cancel"
                                                        BackgroundColor="#B0BEC5"
                                                        TextColor="Black"
                                                        Clicked="CloseTransactionPopup"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>

                                                <Button Text="Confirm"
                                                        BackgroundColor="#00BFA5"
                                                        TextColor="White"
                                                        Clicked="OnTransactionConfirmClicked"
                                                        CornerRadius="10"
                                                        WidthRequest="100"/>
                                        </HorizontalStackLayout>

                                </VerticalStackLayout>
                        </Frame>
                </Grid>



        </Grid>



</ContentPage>