<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saha.Admin.AdminDashboardPage"
             BackgroundColor="Black">

    <ContentPage.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="PageGradientBackground"
                                 StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#00807E"
                              Offset="0.1"/>
                <GradientStop Color="#1A596E"
                              Offset="0.5"/>
                <GradientStop Color="#342758"
                              Offset="1.0"/>
            </LinearGradientBrush>

            <Style x:Key="Headline"
                   TargetType="Label">
                <Setter Property="FontSize"
                        Value="36"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="HorizontalOptions"
                        Value="Center"/>
                <Setter Property="TextColor"
                        Value="White"/>
                <Setter Property="Margin"
                        Value="0,0,0,20"/>
            </Style>

            <Style x:Key="PrimaryActionButtonStyle"
                   TargetType="Button">
                <Setter Property="FontSize"
                        Value="18"/>
                <Setter Property="FontAttributes"
                        Value="Bold"/>
                <Setter Property="TextColor"
                        Value="White"/>
                <Setter Property="Padding"
                        Value="10,5"/>
                <Setter Property="Margin"
                        Value="10"/>
                <Setter Property="CornerRadius"
                        Value="20"/>
                <Setter Property="BackgroundColor"
                        Value="#c0392b"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Background>
        <StaticResource Key="PageGradientBackground"/>
    </ContentPage.Background>

    <VerticalStackLayout>

        <!-- Header with system name and logout -->
        <Grid ColumnDefinitions="*,Auto"
              Padding="15"
              BackgroundColor="Transparent"
              VerticalOptions="Start">
            <Label Text="SAHA System"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>
            <Button Text="Logout"
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Clicked="OnLogoutClicked"
                    VerticalOptions="Center"
                    BackgroundColor="#D9534F"
                    HorizontalOptions="End"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView>
            <VerticalStackLayout Padding="25,40"
                                 Spacing="18"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="FillAndExpand"
                                 MaximumWidthRequest="450">
                <Label Text="Admin Dashboard"
                       Style="{StaticResource Headline}"/>
                <Label Text="Welcome to the Admin Dashboard. Here you can manage users, view reports, and configure settings."
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
